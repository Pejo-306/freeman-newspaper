<% provide(:title, 'Log in') %>

<div class="w-50 container-fluid form-container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <h1>Log in</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= render 'form' %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <span>
          Don't have an account? <%= link_to 'Sign up', signup_path %>
        </span>
      </div>
    </div>
  </div>
</div>

