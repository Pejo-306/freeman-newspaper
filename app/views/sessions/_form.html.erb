<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group row">
    <div class="col-12 col-sm-3">
      <%= f.label :email, class: label_classes %>
    </div>
    <div class="col-12 col-sm-9">
      <%= f.email_field :email, class: 'form-control',
                                placeholder: 'name@example.com' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12 col-sm-3">
      <%= f.label :password, class: label_classes %>
    </div>
    <div class="col-12 col-sm-9">
      <%= f.password_field :password, class: 'form-control',
                                      placeholder: 'password' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12 col-sm-6">
      <div class="form-check">
        <%= f.label :remember_me, class: 'form-check-label' do %>
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <span>Remember me</span>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-sm-6">
      <div class="d-flex justify-content-start justify-content-sm-end">
        <%= link_to 'Forgotten password?', new_password_reset_path %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12">
      <%= f.submit 'Log in', class: submit_classes %>
    </div>
  </div>
<% end %>

