<% provide :title, "Column of #{@column.author.full_name}" %>

<div class="row">
  <div class="col-12">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-center">
          <%= content_tag :h1, "#{@column.author.full_name}'s column" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= content_tag :p, @column.author.biography, id: 'author-biography' %>
      </div>
    </div>
    <hr>
    <% unless @relevant_articles.empty? %>
      <div class="row">
        <div class="col-12">
          <%= content_tag :h3, "Most relevant articles:" %>
        </div>
        <div class="col-12">
          <ul class="articles-list list-group">
            <%= render @relevant_articles %>
          </ul>
        </div>
      </div>
      <hr>
    <% end %>
    <div class="row">
      <div class="col-12">
        <%= content_tag :h3, "Articles:" %>
      </div>
      <div class="col-12">
        <ul class="articles-list list-group">
          <%= render @articles %>
        </ul>
      </div>
      <div class="col-12">
        <div class="d-flex justify-content-center">
          <div id="infinite-scrolling">
            <%= will_paginate @articles, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

