<%= form_for(user, url: yield(:form_url)) do |f| %>
  <%= render 'layouts/error_messages', object: user %>

  <div class="form-group row">
    <div class="col-12 col-sm-3">
      <%= f.label :name, class: label_classes %>
    </div>
    <div class="col-12 col-sm-9">
      <%= f.text_field :name, class: 'form-control',
                              placeholder: 'First name' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12 col-sm-3">
      <%= f.label :surname, class: label_classes %>
    </div>
    <div class="col-12 col-sm-9">
      <%= f.text_field :surname, class: 'form-control',
                                 placeholder: 'Last name' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12 col-sm-3">
      <%= f.label :email, class: label_classes %>
    </div>
    <div class="col-12 col-sm-9">
      <%= f.email_field :email, class: 'form-control',
                                placeholder: 'name@example.com' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12 col-sm-3">
      <%= f.label :password, class: label_classes %>
    </div>
    <div class="col-12 col-sm-9">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12 col-sm-3">
      <%= f.label :password_confirmation, 'Confirmation', class: label_classes %>
    </div>
    <div class="col-12 col-sm-9">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12">
      <%= f.submit yield(:button_text), class: submit_classes %>
    </div>
  </div>
<% end %>

