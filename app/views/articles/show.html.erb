<% provide(:title, @article.title) %>

<article class="row">
  <div class="col-12">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-center">
          <h1><%= @article.title %></h1>
        </div>
        <div class="col-12">
          <div class="row">
            <div class="col-6 col-lg-2">
              <p class="rm-margin">Posted:</p>
            </div>
            <div class="col-6 col-lg-4">
              <p class="text-right text-lg-left rm-margin"><%= @article.created_at %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-6 col-lg-2">
              <p class="rm-margin">Last updated:</p>
            </div>
            <div class="col-6 col-lg-4">
              <p class="text-right text-lg-left rm-margin"><%= @article.updated_at %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-12">
        <p id="content" class="rm-margin"><%= @article.content %></p>
      </div>
    </div>
    <hr>
    <% if !current_user.nil? && current_user.author? %>
      <div class="row">
        <div class="col-12 col-md-4 offset-md-8">
          <%= link_to 'Delete', article_path(@article),
                                method: :delete, data: { confirm: 'Are you sure?' },
                                class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</article>

