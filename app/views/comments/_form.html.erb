<div class="row comment">
  <div class="col-12">
    <%= form_for @new_comment, url: '' do |f| %>
      <%# TODO: finish this comment creation %>
      <%= render 'layouts/error_messages', object: @new_comment %>

      <div class="row comment-header">
        <div class="col-12 col-md-6">
          <%= content_tag :h5, "#{!current_user.nil? ? current_user.full_name : 'Anonymous user'} is writing",
                          class: 'rm-margin text-center' %>
        </div>
        <div class="col-12 col-md-6">
          <%= content_tag :p, 'NOW', class: 'rm-margin text-center' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12">
          <%= text_area_tag :content, nil, class: 'form-control comment-content',
                                           placeholder: 'Write your comment here' %>
        </div>
      </div>
      <hr>
      <div class="form-group row">
        <div class="col-12">
          <%= f.submit 'Post comment', class: submit_classes %>
        </div>
      </div>
    <% end %>
  </div>
</div>

