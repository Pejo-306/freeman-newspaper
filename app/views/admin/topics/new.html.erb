<% provide(:title, "New topic") %>
<% provide(:form_url, admin_topics_path) %>
<% provide(:button_text, 'Create a new topic') %>

<div class="container-fluid form-container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <h1>Create a new topic</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= render 'form', topic: @topic %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <span>
          <%= link_to 'Back to index page', admin_topics_path %>
        </span>
      </div>
    </div>
  </div>
</div>

