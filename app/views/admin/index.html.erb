<% provide(:title, 'Models') %>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-center justify-content-md-start">
      <h1>Models</h1>
    </div>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-12">
    <ul class="list-group-item">
      <% @models.each do |model| %>
        <% plural_name = model.name.pluralize %>
        <div class="row">
          <div class="col-12 col-sm-4 col-lg-2">
            <div class="d-flex h-100 justify-content-center align-items-center">
              <%= link_to plural_name, eval("admin_#{plural_name.downcase}_path"),
                          class: 'btn btn-primary btn-block' %>
            </div>
          </div>

          <div class="col-12 col-sm-4 col-lg-2 offset-lg-6">
            <div class="d-flex h-100 justify-content-center
                        justify-content-lg-end align-items-center">
              <%= link_to "New #{model.name}", 
                          eval("new_admin_#{model.name.downcase}_path"),
                          class: 'btn btn-primary btn-block' %>
            </div>
          </div>

          <div class="col-12 col-sm-4 col-lg-2">
            <div class="d-flex h-100 justify-content-center
                        justify-content-lg-start align-items-center">
              Count: <%= model.count %>
            </div> 
          </div>
        </div>
        <hr>
      <% end %>
    <ul>
  </div>
</div>

