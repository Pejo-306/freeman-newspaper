<% provide(:title, "User: #{@user.full_name}") %>

<div class="row">
  <div class="col-8">
    <h1>User: <%= @user.full_name %></h1>
  </div>
  <div class="col-4">
    <div class="d-flex h-100 justify-content-end align-items-center">
      <%= link_to 'Edit', edit_admin_user_path(@user),
                          class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-8">
    <div class="row"> 
      <div class="col-4">
        <span>Created:</span>
      </div>
      <div class="col-8">
        <span id="created_at"><%= @user.created_at %></span>
      </div>
    </div>
  </div>

  <div class="col-8">
    <div class="row"> 
      <div class="col-4">
        <span>Last updated:</span>
      </div>
      <div class="col-8">
        <span id="updated_at"><%= @user.updated_at %></span>
      </div>
    </div>
  </div>
</div>
<hr>

<div id="fields-row" class="row">
  <div class="col-12">
    <% @fields.each do |field|  %>
      <% value = @user.send(field) %>
      <p id="<%= field %>">
        <strong><%= field %></strong>: <%=  value.nil? ? '<null>' : value %>
      </p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-end">
      <%= link_to 'Back to index page', admin_users_path,
                                        class: 'btn btn-primary' %>
    </div>
  </div>
</div>

