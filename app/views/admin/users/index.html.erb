<% provide(:title, 'All users') %>

<div class="row">
  <div class="col-12 col-md-4">
    <div class="d-flex justify-content-center justify-content-md-start">
      <h1>All users</h1>
    </div>
  </div>
  <div class="col-12 col-md-2 offset-md-6">
    <div class="d-flex h-100 justify-content-md-end align-items-center">
      <%= link_to 'New user', new_admin_user_path,
                  class: 'btn btn-primary btn-block' %>
    </div>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-center justify-content-md-start">
      <%= will_paginate @users, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
    </div> 
  </div>
</div>

<div class="row">
  <div class="col-12">
    <ul id="pagination-items" class="list-group">
      <%= render @users %>
    </ul>
  </div>
</div>

