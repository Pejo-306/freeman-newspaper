<%= form_for(user, url: yield(:form_url)) do |f| %>
  <%= render 'layouts/error_messages', object: user %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :surname %>
  <%= f.text_field :surname %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, 'Confirmation' %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :activated %>
  <%= f.check_box :activated, value: false %>

  <%= f.label :admin %>
  <%= f.check_box :admin, value: false %>

  <%= f.submit yield(:submit_text) %>
<% end %>

