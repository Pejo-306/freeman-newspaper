<% provide(:form_url, admin_users_path) %>
<% provide(:button_text, 'Create a new user') %>

<div class="w-50 container-fluid form-container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <h1>Create a new user</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= render 'form', user: @user %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-center">
        <span>
          <%= link_to 'Back to index page', admin_users_path %>
        </span>
      </div>
    </div>
  </div>
</div>

