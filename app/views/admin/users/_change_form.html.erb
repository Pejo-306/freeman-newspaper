<%= form_for(user, url: admin_user_path(user)) do |f| %>
  <%= render 'layouts/error_messages', object: user %>

  <%= f.label :id %>
  <%= f.number_field :id, readonly: true %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :surname %>
  <%= f.text_field :surname %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, 'Confirmation' %>
  <%= f.password_field :password_confirmation  %>

  <%= f.label :created_at %>
  <%= f.datetime_field :created_at %>

  <%= f.label :updated_at %>
  <%= f.datetime_field :updated_at  %>

  <%= f.label :admin %>
  <%= f.check_box :admin %>

  <%= f.label :activated %>
  <%= f.check_box :activated %>

  <%= f.label :activated_at %>
  <%= f.datetime_field :activated_at %>

  <%= f.label :reset_sent_at %>
  <%= f.datetime_field :reset_sent_at %>

  <%= f.submit 'Apply changes' %>
<% end %>

