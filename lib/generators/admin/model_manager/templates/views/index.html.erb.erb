<%% provide(:title, 'All <%= @record_name.pluralize %>') %>

<div class="row">
  <div class="col-12 col-md-4">
    <div class="d-flex justify-content-center justify-content-md-start">
      <h1>All <%= @record_name.pluralize %></h1>
    </div>
  </div>
  <div class="col-12 col-md-2 offset-md-6">
    <div class="d-flex h-100 justify-content-md-end align-items-center">
      <%%= link_to 'New <%= @record_name %>', new_admin_<%= @record_name %>_path,
                 class: 'btn btn-primary btn-block' %>
    </div>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-center justify-content-md-start">
      <%%= will_paginate <%= "@#{@record_name.pluralize}" %>, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <ul id="pagination-items" class="list-group">
      <%%= render <%= "@#{@record_name.pluralize}" %> %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-center justify-content-md-start">
      <%%= will_paginate <%= "@#{@record_name.pluralize}" %>, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
    </div>
  </div>
</div>

